<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_e7a5793aca230f476c7d2f7490c68bf"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".fragment_cart">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="376dp"
        android:layout_height="642dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_corner_white"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="0dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="1.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_cart"
            android:layout_width="334dp"
            android:layout_height="441dp"
            android:layout_margin="8dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="16dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textTotalMoney"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/buttonCartCheckOut"
            style="@style/blueUnselected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/wallet_dim_foreground_disabled_holo_dark"
            android:text="Proceed to checkout"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textTot"
            style="@style/simpleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/baseline_attach_money_24"
            android:text="Total:"
            app:layout_constraintBottom_toTopOf="@+id/buttonCartCheckOut"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textTotalMoney"
            style="@style/simpleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/oxygen"
            android:text="69420"
            android:textColor="#00E676"
            app:layout_constraintBottom_toTopOf="@+id/buttonCartCheckOut"
            app:layout_constraintStart_toEndOf="@+id/textTot" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2_1"
            android:layout_width="0dp"
            android:layout_height="156dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="642dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textTitle"
                style="@style/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="44dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Your Cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="316dp"
        android:layout_height="139dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.386"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textTitle1"
            style="@style/titleText"
            android:layout_width="349dp"
            android:layout_height="88dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="33dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="Your Cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.225" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>